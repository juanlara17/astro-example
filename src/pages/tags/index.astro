---
import Layout from "../../layouts/layout.astro";
const allPosts = await Astro.glob('../post/*.md');
// const tags = ["astro", "successes", "community", "setbacks", "learning in public"];
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
const pageTitle = 'Tags Index'
---
<Layout pageTitle={pageTitle}>
    <div class="flex flex-wrap my-0 mx-auto">
        {tags.map((tag) => <p class="capitalize m-1 border border-r-4 py-2 px-4 text-xl "><a href={`/tags/${tag}`} class="hover:text-blue-800">{tag}</a></p>)}
    </div>
</Layout>